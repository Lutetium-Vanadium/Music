{
  "compilerOptions": {
    "moduleResolution": "node",
    "baseUrl": "./node_modules",
    "rootDir": "./app/main",
    "experimentalDecorators": true,
    "allowJs": true,
    "jsx": "react",
    "esModuleInterop": true,
    "resolveJsonModule": false,
    "outDir": "./app/build",
    "target": "ES5",
    "strict": false,
    "paths": {
      "~*": ["./app/main/*", "./app/renderer/*"]
    }
  },
  "include": ["./app/main/**/*.ts", "global.d.ts", "./declarations.d.ts"],
  "exclude": ["./node_modules", "./**/*.example.ts"]
}
