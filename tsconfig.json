{
  "compilerOptions": {
    "moduleResolution": "node",
    "baseUrl": ".",
    "rootDir": "./src",
    "experimentalDecorators": true,
    "allowJs": true,
    "jsx": "react",
    "esModuleInterop": true,
    "resolveJsonModule": false,
    "outDir": "./build",
    "target": "ES5",
    "paths": {
      "~*": ["./src/*", "./app/src/*"]
    }
  },
  "include": ["./src/**/*.ts", "global.d.ts", "./declarations.d.ts"],
  "exclude": ["./node_modules"]
}
