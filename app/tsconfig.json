{
  "compilerOptions": {
    "allowJs": true,
    "jsx": "react",
    "baseUrl": ".",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "rootDir": "./src",
    "target": "ES5",
    "paths": {
      "~*": ["./src/*"],
      "#root/*": ["./src/*"],
      "#logos/*": ["./src/logos/*"],
      "#shared/*": ["./src/shared/*"]
    },
    "strict": false
  },
  "include": ["./**/*.ts", "./**/*.tsx", "global.d.ts", "./declarations.d.ts"],
  "exclude": ["node_modules"]
}
