{
  "compilerOptions": {
    "allowJs": true,
    "jsx": "react",
    "baseUrl": ".",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "rootDir": "./renderer",
    "target": "ES5",
    "experimentalDecorators": true,
    "paths": {
      "#*": ["./renderer/*"],
      "#root/*": ["./renderer/*"],
      "#logos/*": ["./renderer/logos/*"],
      "#shared/*": ["./renderer/shared/*"]
    },
    "strict": false
  },
  "include": ["./**/*.ts", "./**/*.tsx", "global.d.ts", "../declarations.d.ts"],
  "exclude": ["node_modules"]
}
